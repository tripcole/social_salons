<div>
  <div>
    <h1>
      List of all salons
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new salon
    </h2>

    <form action="/insert_salon" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="salon_type_box">
          Salon type
        </label>

        <input type="text" id="salon_type_box" name="query_salon_type">
      </div>

      <div>
        <label for="street_box">
          Street
        </label>

        <input type="text" id="street_box" name="query_street">
      </div>

      <div>
        <label for="city_box">
          City
        </label>

        <input type="text" id="city_box" name="query_city">
      </div>

      <div>
        <label for="state_box">
          State
        </label>

        <input type="text" id="state_box" name="query_state">
      </div>

      <div>
        <label for="zip_code_box">
          Zip code
        </label>

        <input type="text" id="zip_code_box" name="query_zip_code">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <button>
        Create salon
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Salon type
        </th>

        <th>
          Street
        </th>

        <th>
          City
        </th>

        <th>
          State
        </th>

        <th>
          Zip code
        </th>

        <th>
          Address
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_salons.each do |a_salon| %>
      <tr>
        <td>
          <%= a_salon.id %>
        </td>

        <td>
          <%= a_salon.name %>
        </td>

        <td>
          <%= a_salon.description %>
        </td>

        <td>
          <%= a_salon.salon_type %>
        </td>

        <td>
          <%= a_salon.street %>
        </td>

        <td>
          <%= a_salon.city %>
        </td>

        <td>
          <%= a_salon.state %>
        </td>

        <td>
          <%= a_salon.zip_code %>
        </td>

        <td>
          <%= a_salon.address %>
        </td>

        <td>
          <%= time_ago_in_words(a_salon.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_salon.updated_at) %> ago
        </td>

        <td>
          <a href="/salons/<%= a_salon.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
