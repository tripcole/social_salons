<h1>My Followers</h1>

<% if @pending_followers.count != 0 %>
  <h2>Requests Awaiting Confirmation</h2>
  <% @pending_followers.each do |a_request| %>
    <table>
      <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Sent</th>
      </tr>
      <tr>
        <td><%= a_request.id %></td>
        <td><%= a_request.id %></td>
        <td><%= a_request.id %></td>
        <td><%= a_request.created_at %></td>
      </tr>
    <table>
  <% end %>
<% else %>
<% end %>

<h2>My Followers</h2>
<%= @current_followers %>