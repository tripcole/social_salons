<h1>My Following</h1>

<% if @pending_following.count != 0 %>
  <h2>Requests Awaiting Responses</h2>
  <table border="1">
      <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Sent</th>
        <th></th>
        <th>Response</th>
      </tr>
      <% @pending_following.each do |a_request| %>
      <tr>
        <td><%= a_request.recipient.username %></td>
        <td><%= a_request.recipient.first_name %></td>
        <td><%= a_request.recipient.last_name %></td>
        <td><%= time_ago_in_words(a_request.created_at) %> ago</td>
        <td><a href="/users/<%= a_request.recipient.id %>">Show details</a></td>
        <td>TBU</td>
      </tr>
      <% end %>
    <table>
<% else %>
<% end %>

<% if @current_following.count != 0 %>
  <h2>My Following</h2>
  <table border="1">
      <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Sent</th>
        <th></th>
      </tr>
      <% @current_following.each do |a_following| %>
      <tr>
        <td><%= a_following.recipient.username %></td>
        <td><%= a_following.recipient.first_name %></td>
        <td><%= a_following.recipient.last_name %></td>
        <td><%= time_ago_in_words(a_following.created_at) %> ago</td>
        <td><a href="/users/<%= a_following.recipient.id %>">Show details</a></td>
      </tr>
      <% end %>
    <table>
<% else %>
<% end %>