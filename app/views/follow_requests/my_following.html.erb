<h1>My Following</h1>

<% if @pending_following.count != 0 %>
  <h2>Requests Awaiting Response</h2>
  <% @pending_following.each do |a_request| %>
    <table>
      <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Sent</th>
      </tr>
      <tr>
        <td><%= a_request.id %></td>
        <td><%= a_request.id %></td>
        <td><%= a_request.id %></td>
        <td><%= a_request.created_at %></td>
      </tr>
    <table>
  <% end %>
<% else %>
<% end %>

<h2>Following</h2>
<%= @current_following %>